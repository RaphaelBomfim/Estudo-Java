package primeiro;

import java.util.Scanner;

public class Console {
public static void main(String[] args) {
	
	Scanner entrada = new Scanner(System.in); 
	
	System.out.println("Digite o Primeiro salario: ");
	String salario1 = entrada.next();
	System.out.println("o primeiro salario é: " + salario1);
	
	System.out.println("\nDigite o segundo salario: ");
	String salario2 = entrada.next();
	System.out.println("o segundo salario é: " + salario2);

	System.out.println("\nDigite o terceiro salario: ");
	String salario3 = entrada.next();
	System.out.println("o terceiro salario é: " + salario3);
	
	  int numeroConvertido1 = Integer.parseInt(salario1);
	  int numeroConvertido2 = Integer.parseInt(salario2);
	  int numeroConvertido3 = Integer.parseInt(salario3);
	  
	  int soma = numeroConvertido1 + numeroConvertido2 + numeroConvertido3;
	  
	  
	  System.out.println(soma);
	
	
	

	
	
	
}
}
